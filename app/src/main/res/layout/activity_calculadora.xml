<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:columnCount="4"
    android:rowCount="6">


    <TextView
        android:id="@+id/visor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:textSize="50dp"

        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="4" />


    <Button
        android:id="@+id/button_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="C"
        android:layout_row="1"
        android:layout_column="0"


        />

    <Button
        android:id="@+id/button_reverter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"

        android:text="+ / -"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/button_perc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="%"
        android:background= "@drawable/ripple"
        android:layout_row="1"
        android:layout_column="2" />

    <Button
        android:id="@+id/button_del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="Del"
        android:layout_row="1"
        android:layout_column="3" />

    <Button
        android:id="@+id/button_sete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="7"
        android:layout_row="2"
        android:layout_column="0"

        />

    <Button
        android:id="@+id/button_oito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8"
        android:layout_row="2"
        android:layout_column="1" />

    <Button
        android:id="@+id/button_nove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9"
        android:layout_row="2"
        android:layout_column="2" />

    <Button
        android:id="@+id/button_divi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="/"
        android:layout_row="2"
        android:layout_column="3" />
    <Button
        android:id="@+id/button_quatro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="4"
        android:layout_row="3"
        android:layout_column="0"

        />

    <Button
        android:id="@+id/button_cinco"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5"
        android:layout_row="3"
        android:layout_column="1" />

    <Button
        android:id="@+id/button_seis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6"
        android:layout_row="3"
        android:layout_column="2" />

    <Button
        android:id="@+id/button_mult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="X"
        android:layout_row="3"
        android:layout_column="3" />

    <Button
        android:id="@+id/button_um"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="1"
        android:layout_row="4"
        android:layout_column="0"

        />

    <Button
        android:id="@+id/button_dois"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2"
        android:layout_row="4"
        android:layout_column="1" />

    <Button
        android:id="@+id/button_tres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3"
        android:layout_row="4"
        android:layout_column="2" />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="-"
        android:layout_row="4"
        android:layout_column="3" />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="0"
        android:layout_row="5"
        android:layout_column="0"

        />

    <Button
        android:id="@+id/button_ponto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="."
        android:layout_row="5"
        android:layout_column="1" />

    <Button
        android:id="@+id/button_igual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="
        android:layout_row="5"
        android:layout_column="2" />

    <Button
        android:id="@+id/button_soma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+"
        android:layout_row="5"
        android:layout_column="3" />


</GridLayout>

